<div class="space-y-6">
    <!-- Welcome Section -->
    <div class="bg-gradient-to-r from-blue-600 to-indigo-600 rounded-xl p-6 text-white">
        <h1 class="text-2xl font-bold mb-2">Selamat Datang, <%= currentUser.nama %>!</h1>
        <p class="opacity-90">Dashboard Admin P4 Jakarta - Kelola semua aktivitas sistem dari sini</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Total Admin -->
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 font-medium">Total Admin</p>
                    <p class="text-3xl font-bold text-gray-900 mt-1"><%= typeof stats !== 'undefined' ? stats.totalAdmin : 0 %></p>
                </div>
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Total Guru -->
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 font-medium">Total Guru</p>
                    <p class="text-3xl font-bold text-gray-900 mt-1"><%= typeof stats !== 'undefined' ? stats.totalGuru : 0 %></p>
                    <% if (typeof stats !== 'undefined' && stats.pendingGuru > 0) { %>
                    <p class="text-xs text-yellow-600 mt-1"><%= stats.pendingGuru %> menunggu approval</p>
                    <% } %>
                </div>
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Total Peserta -->
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 font-medium">Total Peserta</p>
                    <p class="text-3xl font-bold text-gray-900 mt-1"><%= typeof stats !== 'undefined' ? stats.totalPeserta : 0 %></p>
                </div>
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Kuota P4 -->
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 font-medium">Kuota P4 Aktif</p>
                    <p class="text-3xl font-bold text-gray-900 mt-1">
                        <%= typeof kuotaAktif !== 'undefined' && kuotaAktif ? kuotaAktif.peserta_terdaftar : 0 %>/<%= typeof kuotaAktif !== 'undefined' && kuotaAktif ? kuotaAktif.max_peserta : 50 %>
                    </p>
                    <% if (typeof kuotaAktif !== 'undefined' && kuotaAktif) { %>
                    <p class="text-xs text-gray-500 mt-1"><%= kuotaAktif.tahun_ajaran %></p>
                    <% } %>
                </div>
                <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Pending Guru Approval -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100">
            <div class="p-6 border-b border-gray-100">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-semibold text-gray-900">Guru Menunggu Approval</h2>
                    <a href="/admin/approve-guru" class="text-sm text-blue-600 hover:text-blue-800">Lihat Semua</a>
                </div>
            </div>
            <div class="p-6">
                <% if (typeof pendingGurus !== 'undefined' && pendingGurus.length > 0) { %>
                <div class="space-y-4">
                    <% pendingGurus.slice(0, 5).forEach(function(guru) { %>
                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                                <span class="text-green-700 font-semibold"><%= guru.nama ? guru.nama.charAt(0).toUpperCase() : 'G' %></span>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900"><%= guru.nama %></p>
                                <p class="text-sm text-gray-500">NIP: <%= guru.nip || '-' %></p>
                            </div>
                        </div>
                        <div class="flex space-x-2">
                            <form action="/admin/guru/<%= guru.id %>/approve" method="POST" class="confirm-action" data-confirm="Yakin ingin menyetujui guru ini?">
                                <button type="submit" class="px-3 py-1 bg-green-600 text-white text-sm rounded-lg hover:bg-green-700">
                                    Setujui
                                </button>
                            </form>
                            <form action="/admin/guru/<%= guru.id %>/reject" method="POST" onsubmit="return promptRejectReason(this)">
                                <input type="hidden" name="rejection_reason" class="reject-reason-input">
                                <button type="submit" class="px-3 py-1 bg-red-600 text-white text-sm rounded-lg hover:bg-red-700">
                                    Tolak
                                </button>
                            </form>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <% } else { %>
                <div class="text-center py-8">
                    <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <p class="text-gray-500">Tidak ada guru yang menunggu approval</p>
                </div>
                <% } %>
            </div>
        </div>

        <!-- Recent Pendaftaran P4 -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100">
            <div class="p-6 border-b border-gray-100">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-semibold text-gray-900">Pendaftaran P4 Terbaru</h2>
                    <a href="/admin/manage-peserta" class="text-sm text-blue-600 hover:text-blue-800">Lihat Semua</a>
                </div>
            </div>
            <div class="p-6">
                <% if (typeof recentPendaftaran !== 'undefined' && recentPendaftaran.length > 0) { %>
                <div class="space-y-4">
                    <% recentPendaftaran.slice(0, 5).forEach(function(p) { %>
                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                                <span class="text-blue-700 font-semibold"><%= p.nama ? p.nama.charAt(0).toUpperCase() : 'P' %></span>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900"><%= p.nama || '-' %></p>
                                <p class="text-sm text-gray-500">No. Urut: #<%= p.nomor_urut %></p>
                            </div>
                        </div>
                        <span class="px-3 py-1 text-xs font-medium rounded-full 
                            <%= p.status === 'registered' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                            <%= p.status === 'registered' ? 'Terdaftar' : 'Dibatalkan' %>
                        </span>
                    </div>
                    <% }); %>
                </div>
                <% } else { %>
                <div class="text-center py-8">
                    <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                    <p class="text-gray-500">Belum ada pendaftaran P4</p>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Aksi Cepat</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <a href="/admin/manage-admin" class="flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-2">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                    </svg>
                </div>
                <span class="text-sm font-medium text-gray-700">Tambah Admin</span>
            </a>
            <a href="/admin/manage-kuota" class="flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-2">
                    <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                </div>
                <span class="text-sm font-medium text-gray-700">Kelola Kuota</span>
            </a>
            <a href="/admin/reports" class="flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-2">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <span class="text-sm font-medium text-gray-700">Lihat Laporan</span>
            </a>
            <a href="/admin/approve-guru" class="flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-2">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <span class="text-sm font-medium text-gray-700">Approval Guru</span>
            </a>
        </div>
    </div>
</div>
