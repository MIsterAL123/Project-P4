<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Laporan</h1>
            <p class="text-gray-600 mt-1">Lihat laporan dan statistik sistem</p>
        </div>
        <div class="mt-4 sm:mt-0">
            <button id="printReportBtn" type="button" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                </svg>
                Cetak Laporan
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Total Pendaftaran P4</p>
                    <p class="text-3xl font-bold text-gray-900 mt-1"><%= typeof stats !== 'undefined' ? stats.totalPendaftaran : 0 %></p>
                </div>
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Disetujui</p>
                    <p class="text-3xl font-bold text-green-600 mt-1"><%= typeof stats !== 'undefined' ? stats.approved : 0 %></p>
                </div>
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Pending</p>
                    <p class="text-3xl font-bold text-yellow-600 mt-1"><%= typeof stats !== 'undefined' ? stats.pending : 0 %></p>
                </div>
                <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Ditolak</p>
                    <p class="text-3xl font-bold text-red-600 mt-1"><%= typeof stats !== 'undefined' ? stats.rejected : 0 %></p>
                </div>
                <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Pendaftaran per Bulan -->
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Pendaftaran per Bulan</h3>
            <div class="h-64 flex items-end justify-around space-x-2">
                <% const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']; %>
                <% const monthlyData = typeof monthlyStats !== 'undefined' ? monthlyStats : Array(12).fill(0); %>
                <% const maxVal = Math.max(...monthlyData, 1); %>
                <% months.forEach(function(month, idx) { %>
                <div class="flex flex-col items-center flex-1">
                    <div class="w-full bg-blue-500 rounded-t transition-all hover:bg-blue-600" 
                        style="height: <%= Math.round((monthlyData[idx] / maxVal) * 200) %>px; min-height: 4px;"></div>
                    <span class="text-xs text-gray-500 mt-2"><%= month %></span>
                    <span class="text-xs font-medium text-gray-700"><%= monthlyData[idx] %></span>
                </div>
                <% }); %>
            </div>
        </div>

        <!-- Status Distribution -->
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Distribusi Status Pendaftaran</h3>
            <div class="flex items-center justify-center h-64">
                <div class="relative w-48 h-48">
                    <% 
                    const total = (typeof stats !== 'undefined' ? stats.totalPendaftaran : 0) || 1;
                    const approved = typeof stats !== 'undefined' ? stats.approved : 0;
                    const pending = typeof stats !== 'undefined' ? stats.pending : 0;
                    const rejected = typeof stats !== 'undefined' ? stats.rejected : 0;
                    %>
                    <svg class="w-full h-full" viewBox="0 0 36 36">
                        <circle cx="18" cy="18" r="15.915" fill="none" stroke="#e5e7eb" stroke-width="3"/>
                        <circle cx="18" cy="18" r="15.915" fill="none" stroke="#22c55e" stroke-width="3"
                            stroke-dasharray="<%= (approved/total)*100 %> <%= 100 - (approved/total)*100 %>"
                            stroke-dashoffset="25"/>
                        <circle cx="18" cy="18" r="15.915" fill="none" stroke="#eab308" stroke-width="3"
                            stroke-dasharray="<%= (pending/total)*100 %> <%= 100 - (pending/total)*100 %>"
                            stroke-dashoffset="<%= 25 - (approved/total)*100 %>"/>
                        <circle cx="18" cy="18" r="15.915" fill="none" stroke="#ef4444" stroke-width="3"
                            stroke-dasharray="<%= (rejected/total)*100 %> <%= 100 - (rejected/total)*100 %>"
                            stroke-dashoffset="<%= 25 - (approved/total)*100 - (pending/total)*100 %>"/>
                    </svg>
                    <div class="absolute inset-0 flex items-center justify-center">
                        <span class="text-2xl font-bold text-gray-900"><%= total %></span>
                    </div>
                </div>
                <div class="ml-8 space-y-3">
                    <div class="flex items-center">
                        <div class="w-4 h-4 bg-green-500 rounded mr-2"></div>
                        <span class="text-sm text-gray-600">Disetujui (<%= approved %>)</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-4 h-4 bg-yellow-500 rounded mr-2"></div>
                        <span class="text-sm text-gray-600">Pending (<%= pending %>)</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-4 h-4 bg-red-500 rounded mr-2"></div>
                        <span class="text-sm text-gray-600">Ditolak (<%= rejected %>)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Log -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100">
        <div class="p-6 border-b border-gray-100">
            <h3 class="text-lg font-semibold text-gray-900">Log Aktivitas Terbaru</h3>
        </div>
        <div class="p-6">
            <% if (typeof activityLogs !== 'undefined' && activityLogs.length > 0) { %>
            <div class="space-y-4">
                <% activityLogs.forEach(function(log) { %>
                <div class="flex items-start space-x-3">
                    <div class="w-2 h-2 mt-2 rounded-full <%= 
                        log.action.includes('create') || log.action.includes('approve') ? 'bg-green-500' :
                        log.action.includes('delete') || log.action.includes('reject') ? 'bg-red-500' :
                        'bg-blue-500' %>"></div>
                    <div class="flex-1">
                        <p class="text-sm text-gray-900"><%= log.description %></p>
                        <p class="text-xs text-gray-500 mt-1">
                            <%= new Date(log.created_at).toLocaleString('id-ID') %>
                        </p>
                    </div>
                </div>
                <% }); %>
            </div>
            <% } else { %>
            <p class="text-center text-gray-500 py-8">Belum ada aktivitas</p>
            <% } %>
        </div>
    </div>
</div>