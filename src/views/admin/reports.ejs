<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Laporan & Statistik</h1>
            <p class="text-gray-600 mt-1">Lihat laporan dan statistik sistem P4 Jakarta Timur</p>
        </div>
        <div class="mt-4 sm:mt-0">
            <button onclick="window.print()" type="button" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                </svg>
                Cetak Laporan
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Total Admin</p>
                    <p class="text-3xl font-bold text-gray-900 mt-1"><%= typeof stats !== 'undefined' ? stats.totalAdmin : 0 %></p>
                </div>
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-5 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Total Pendidik</p>
                    <p class="text-3xl font-bold text-gray-900 mt-1"><%= typeof stats !== 'undefined' ? stats.totalGuru : 0 %></p>
                    <p class="text-xs text-gray-500 mt-1">
                        <span class="text-green-600"><%= typeof stats !== 'undefined' ? stats.totalGuruActive : 0 %> aktif</span> |
                        <span class="text-yellow-600"><%= typeof stats !== 'undefined' ? stats.totalGuruPending : 0 %> pending</span>
                    </p>
                </div>
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-5 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Total Peserta</p>
                    <p class="text-3xl font-bold text-gray-900 mt-1"><%= typeof stats !== 'undefined' ? stats.totalPeserta : 0 %></p>
                </div>
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-5 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Total Pendaftaran</p>
                    <p class="text-3xl font-bold text-gray-900 mt-1"><%= typeof stats !== 'undefined' ? stats.totalRegistrations : 0 %></p>
                    <p class="text-xs text-yellow-600 mt-1"><%= typeof stats !== 'undefined' ? stats.totalPendingRegistrations : 0 %> pending</p>
                </div>
                <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Pelatihan Statistics -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100">
        <div class="p-5 border-b border-gray-100">
            <h3 class="text-lg font-semibold text-gray-900">Statistik Per Pelatihan</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Pelatihan</th>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Target</th>
                        <th class="px-5 py-3 text-center text-xs font-semibold text-gray-600 uppercase">Peserta Terdaftar</th>
                        <th class="px-5 py-3 text-center text-xs font-semibold text-gray-600 uppercase">Peserta Pending</th>
                        <th class="px-5 py-3 text-center text-xs font-semibold text-gray-600 uppercase">Guru Terdaftar</th>
                        <th class="px-5 py-3 text-center text-xs font-semibold text-gray-600 uppercase">Guru Pending</th>
                        <th class="px-5 py-3 text-center text-xs font-semibold text-gray-600 uppercase">Kuota</th>
                        <th class="px-5 py-3 text-center text-xs font-semibold text-gray-600 uppercase">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    <% if (typeof kuotaStats !== 'undefined' && kuotaStats && kuotaStats.length > 0) { %>
                    <% kuotaStats.forEach(function(kuota) { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-5 py-4">
                            <p class="font-medium text-gray-900"><%= kuota.judul_pelatihan || 'Pelatihan ' + kuota.tahun_ajaran %></p>
                            <p class="text-xs text-gray-500"><%= kuota.tahun_ajaran %></p>
                        </td>
                        <td class="px-5 py-4">
                            <% if (kuota.target_peserta === 'guru') { %>
                            <span class="px-2 py-1 text-xs rounded-full bg-purple-100 text-purple-800">Pendidik</span>
                            <% } else if (kuota.target_peserta === 'peserta') { %>
                            <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800">Peserta</span>
                            <% } else { %>
                            <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Semua</span>
                            <% } %>
                        </td>
                        <td class="px-5 py-4 text-center">
                            <span class="text-green-600 font-semibold"><%= kuota.pesertaRegistered || 0 %></span>
                        </td>
                        <td class="px-5 py-4 text-center">
                            <span class="text-yellow-600"><%= kuota.pesertaPending || 0 %></span>
                        </td>
                        <td class="px-5 py-4 text-center">
                            <span class="text-green-600 font-semibold"><%= kuota.guruRegistered || 0 %></span>
                        </td>
                        <td class="px-5 py-4 text-center">
                            <span class="text-yellow-600"><%= kuota.guruPending || 0 %></span>
                        </td>
                        <td class="px-5 py-4 text-center">
                            <span class="font-medium"><%= kuota.peserta_terdaftar || 0 %>/<%= kuota.max_peserta %></span>
                        </td>
                        <td class="px-5 py-4 text-center">
                            <% if (kuota.status === 'open') { %>
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Dibuka</span>
                            <% } else { %>
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Ditutup</span>
                            <% } %>
                        </td>
                    </tr>
                    <% }); %>
                    <% } else { %>
                    <tr>
                        <td colspan="8" class="px-5 py-12 text-center text-gray-500">
                            Belum ada data pelatihan
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- User Distribution -->
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Distribusi Pengguna</h3>
            <div class="space-y-4">
                <div>
                    <div class="flex justify-between mb-1">
                        <span class="text-sm text-gray-600">Admin</span>
                        <span class="text-sm font-medium text-gray-900"><%= typeof stats !== 'undefined' ? stats.totalAdmin : 0 %></span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2.5">
                        <% const totalUsers = (typeof stats !== 'undefined' ? (stats.totalAdmin + stats.totalGuru + stats.totalPeserta) : 1) || 1; %>
                        <div class="bg-purple-600 h-2.5 rounded-full" style="width: <%= ((typeof stats !== 'undefined' ? stats.totalAdmin : 0) / totalUsers * 100) %>%"></div>
                    </div>
                </div>
                <div>
                    <div class="flex justify-between mb-1">
                        <span class="text-sm text-gray-600">Pendidik (Aktif)</span>
                        <span class="text-sm font-medium text-gray-900"><%= typeof stats !== 'undefined' ? stats.totalGuruActive : 0 %></span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2.5">
                        <div class="bg-green-600 h-2.5 rounded-full" style="width: <%= ((typeof stats !== 'undefined' ? stats.totalGuruActive : 0) / totalUsers * 100) %>%"></div>
                    </div>
                </div>
                <div>
                    <div class="flex justify-between mb-1">
                        <span class="text-sm text-gray-600">Pendidik (Pending)</span>
                        <span class="text-sm font-medium text-gray-900"><%= typeof stats !== 'undefined' ? stats.totalGuruPending : 0 %></span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2.5">
                        <div class="bg-yellow-500 h-2.5 rounded-full" style="width: <%= ((typeof stats !== 'undefined' ? stats.totalGuruPending : 0) / totalUsers * 100) %>%"></div>
                    </div>
                </div>
                <div>
                    <div class="flex justify-between mb-1">
                        <span class="text-sm text-gray-600">Peserta</span>
                        <span class="text-sm font-medium text-gray-900"><%= typeof stats !== 'undefined' ? stats.totalPeserta : 0 %></span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2.5">
                        <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= ((typeof stats !== 'undefined' ? stats.totalPeserta : 0) / totalUsers * 100) %>%"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Summary -->
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Ringkasan Status</h3>
            <div class="grid grid-cols-2 gap-4">
                <div class="text-center p-4 bg-green-50 rounded-lg">
                    <p class="text-3xl font-bold text-green-600"><%= typeof stats !== 'undefined' ? stats.totalRegistrations : 0 %></p>
                    <p class="text-sm text-green-700 mt-1">Pendaftaran Disetujui</p>
                </div>
                <div class="text-center p-4 bg-yellow-50 rounded-lg">
                    <p class="text-3xl font-bold text-yellow-600"><%= typeof stats !== 'undefined' ? stats.totalPendingRegistrations : 0 %></p>
                    <p class="text-sm text-yellow-700 mt-1">Pendaftaran Pending</p>
                </div>
                <div class="text-center p-4 bg-blue-50 rounded-lg">
                    <p class="text-3xl font-bold text-blue-600"><%= typeof stats !== 'undefined' ? stats.totalGuruActive : 0 %></p>
                    <p class="text-sm text-blue-700 mt-1">Pendidik Aktif</p>
                </div>
                <div class="text-center p-4 bg-purple-50 rounded-lg">
                    <p class="text-3xl font-bold text-purple-600"><%= typeof kuotaStats !== 'undefined' && kuotaStats ? kuotaStats.filter(k => k.status === 'open').length : 0 %></p>
                    <p class="text-sm text-purple-700 mt-1">Pelatihan Dibuka</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Print-only styles -->
    <style>
        @media print {
            .no-print { display: none !important; }
            body { background: white !important; }
            .shadow-sm { box-shadow: none !important; }
            .rounded-xl { border-radius: 0 !important; }
        }
    </style>
</div>
