<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Kelola Peserta</h1>
            <p class="text-gray-600 mt-1">Kelola data peserta P4 Jakarta</p>
        </div>
        <div class="mt-4 sm:mt-0 flex items-center space-x-3">
            <form action="/admin/manage-peserta" method="GET" class="flex items-center space-x-2">
                <input type="text" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>" 
                    placeholder="Cari peserta..." 
                    class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                <button type="submit" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </button>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Peserta</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">NIK</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">No. Urut</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Tgl Daftar</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Aksi</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    <% if (typeof pesertas !== 'undefined' && pesertas.length > 0) { %>
                    <% pesertas.forEach(function(peserta) { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                                    <span class="text-blue-700 font-semibold"><%= peserta.nama ? peserta.nama.charAt(0).toUpperCase() : '?' %></span>
                                </div>
                                <div class="ml-3">
                                    <p class="font-medium text-gray-900"><%= peserta.nama || '-' %></p>
                                    <p class="text-sm text-gray-500"><%= peserta.email || '-' %></p>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-gray-600"><%= peserta.nik || '-' %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-gray-600"><%= peserta.nomor_urut ? '#' + peserta.nomor_urut : '-' %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-gray-600">
                            <%= peserta.tanggal_daftar ? new Date(peserta.tanggal_daftar).toLocaleDateString('id-ID') : '-' %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-3 py-1 text-xs font-medium rounded-full 
                                <%= peserta.pendaftaran_status === 'registered' ? 'bg-green-100 text-green-800' : 
                                   peserta.pendaftaran_status === 'cancelled' ? 'bg-red-100 text-red-800' : 
                                   'bg-gray-100 text-gray-800' %>">
                                <%= peserta.pendaftaran_status === 'registered' ? 'Terdaftar' : 
                                   peserta.pendaftaran_status === 'cancelled' ? 'Dibatalkan' : 'Belum Daftar' %>
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex space-x-2">
                                <button data-peserta='<%= JSON.stringify(peserta).replace(/'/g, "&#39;") %>' type="button" class="btn-view-peserta text-blue-600 hover:text-blue-800" title="Detail">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                </button>
                                <% if (peserta.link_dokumen) { %>
                                <a href="<%= peserta.link_dokumen %>" target="_blank" class="text-green-600 hover:text-green-800" title="Lihat Dokumen">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                </a>
                                <% } %>
                                <form action="/admin/manage-peserta/<%= peserta.id %>/delete" method="POST" class="confirm-action" data-confirm="Yakin ingin menghapus peserta ini?">
                                    <button type="submit" class="text-red-600 hover:text-red-800" title="Hapus">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                    <% } else { %>
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                            <svg class="w-12 h-12 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                            <% if (typeof search !== 'undefined' && search) { %>
                            Tidak ada peserta dengan kata kunci "<%= search %>"
                            <% } else { %>
                            Belum ada data peserta
                            <% } %>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
    <div class="flex justify-center space-x-2">
        <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="?page=<%= i %><%= typeof search !== 'undefined' && search ? '&search=' + search : '' %>" 
            class="px-4 py-2 rounded-lg <%= currentPage === i ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
            <%= i %>
        </a>
        <% } %>
    </div>
    <% } %>
</div>

<!-- Detail Modal -->
<div id="detailModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl max-w-lg w-full mx-4 max-h-[90vh] overflow-y-auto">
        <div class="p-6 border-b border-gray-100 sticky top-0 bg-white">
            <div class="flex items-center justify-between">
                <h3 class="text-lg font-semibold text-gray-900">Detail Peserta</h3>
                <button type="button" id="detailModalCloseBtn" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
        <div class="p-6" id="detailContent">
            <!-- Content will be filled by JavaScript -->
        </div>
    </div>
</div>

<script>
function viewDetail(peserta) {
    const content = `
        <div class="flex items-center space-x-4 mb-6">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
                <span class="text-blue-700 font-bold text-2xl">${peserta.nama ? peserta.nama.charAt(0).toUpperCase() : '?'}</span>
            </div>
            <div>
                <h4 class="text-xl font-semibold text-gray-900">${peserta.nama || '-'}</h4>
                <p class="text-gray-500">${peserta.email || '-'}</p>
            </div>
        </div>
        <div class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-sm text-gray-500">NIK</p>
                    <p class="font-medium text-gray-900">${peserta.nik || '-'}</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-sm text-gray-500">Nomor Urut</p>
                    <p class="font-medium text-gray-900">${peserta.nomor_urut ? '#' + peserta.nomor_urut : '-'}</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-sm text-gray-500">Status</p>
                    <p class="font-medium ${peserta.pendaftaran_status === 'registered' ? 'text-green-600' : peserta.pendaftaran_status === 'cancelled' ? 'text-red-600' : 'text-gray-600'}">
                        ${peserta.pendaftaran_status === 'registered' ? 'Terdaftar' : peserta.pendaftaran_status === 'cancelled' ? 'Dibatalkan' : 'Belum Daftar'}
                    </p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-sm text-gray-500">Tahun Ajaran</p>
                    <p class="font-medium text-gray-900">${peserta.tahun_ajaran || '-'}</p>
                </div>
            </div>
            <div class="bg-gray-50 p-4 rounded-lg">
                <p class="text-sm text-gray-500">Tanggal Daftar</p>
                <p class="font-medium text-gray-900">${peserta.tanggal_daftar ? new Date(peserta.tanggal_daftar).toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) : '-'}</p>
            </div>
            ${peserta.link_dokumen ? `
            <div class="bg-gray-50 p-4 rounded-lg">
                <p class="text-sm text-gray-500 mb-2">Link Dokumen</p>
                <a href="${peserta.link_dokumen}" target="_blank" class="text-blue-600 hover:underline break-all">${peserta.link_dokumen}</a>
            </div>
            ` : ''}
        </div>
    `;
    document.getElementById('detailContent').innerHTML = content;
    document.getElementById('detailModal').classList.remove('hidden');
    document.getElementById('detailModal').classList.add('flex');
}

function viewDetailFromButton(el) {
    try {
        const data = el.getAttribute('data-peserta');
        if (!data) return;
        const peserta = JSON.parse(data);
        viewDetail(peserta);
    } catch (err) {
        console.error('Failed to parse peserta data', err);
    }
}

function closeDetailModal() {
    document.getElementById('detailModal').classList.add('hidden');
    document.getElementById('detailModal').classList.remove('flex');
}

document.getElementById('detailModal').addEventListener('click', function(e) {
    if (e.target === this) closeDetailModal();
});

// CSP-safe bindings
document.addEventListener('DOMContentLoaded', function(){
  document.querySelectorAll('.btn-view-peserta').forEach(function(btn){
    btn.addEventListener('click', function(){
      try { viewDetailFromButton(this); } catch(e){console.error(e);}    
    });
  });

  document.querySelectorAll('.confirm-action').forEach(function(form){
    form.addEventListener('submit', function(e){ if (!confirm(form.dataset.confirm || 'Yakin?')) e.preventDefault(); });
  });

  const closeBtn = document.getElementById('detailModalCloseBtn');
  if (closeBtn) closeBtn.addEventListener('click', closeDetailModal);
});
</script>
