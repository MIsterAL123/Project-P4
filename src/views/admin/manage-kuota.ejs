<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Kelola Kuota P4</h1>
            <p class="text-gray-600 mt-1">Kelola kuota pendaftaran program P4</p>
        </div>
        <button id="addKuotaBtn" type="button" class="mt-4 sm:mt-0 inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Tambah Kuota
        </button>
    </div>

    <!-- Current Active Kuota -->
    <% if (typeof activeKuota !== 'undefined' && activeKuota) { %>
    <div class="bg-gradient-to-r from-blue-600 to-indigo-600 rounded-xl p-6 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-blue-200 text-sm">Kuota Aktif</p>
                <h2 class="text-2xl font-bold mt-1"><%= activeKuota.tahun_ajaran %></h2>

            </div>
            <div class="text-right">
                <div class="text-4xl font-bold">
                    <%= activeKuota.peserta_terdaftar %>/<%= activeKuota.max_peserta %>
                </div>
                <p class="text-blue-200">Peserta Terdaftar</p>
                <div class="mt-2 w-48 bg-blue-400 rounded-full h-3">
                    <div class="bg-white h-3 rounded-full transition-all" style="width: <%= (activeKuota.peserta_terdaftar / activeKuota.max_peserta) * 100 %>%"></div>
                </div>
            </div>
        </div>
    </div>
    <% } else { %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-6">
        <div class="flex items-center">
            <svg class="w-6 h-6 text-yellow-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <p class="text-yellow-800">Tidak ada kuota yang aktif saat ini. Silakan tambah kuota baru.</p>
        </div>
    </div>
    <% } %>

    <!-- Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Tahun Ajaran</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Kuota</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Terdaftar</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Periode</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Aksi</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    <% if (typeof kuotaList !== 'undefined' && kuotaList.length > 0) { %>
                    <% kuotaList.forEach(function(kuota) { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900"><%= kuota.tahun_ajaran %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-gray-600"><%= kuota.max_peserta %></td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <span class="text-gray-600"><%= kuota.peserta_terdaftar %></span>
                                <div class="ml-3 w-24 bg-gray-200 rounded-full h-2">
                                    <div class="<%= kuota.peserta_terdaftar >= kuota.max_peserta ? 'bg-red-500' : 'bg-blue-500' %> h-2 rounded-full" 
                                        style="width: <%= Math.min((kuota.peserta_terdaftar / kuota.max_peserta) * 100, 100) %>%"></div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-gray-600 text-sm">
                            -
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-3 py-1 text-xs font-medium rounded-full 
                                <%= kuota.status === 'open' ? 'bg-green-100 text-green-800' : 
                                   kuota.status === 'closed' ? 'bg-red-100 text-red-800' : 
                                   'bg-gray-100 text-gray-800' %>">
                                <%= kuota.status === 'open' ? 'Buka' : kuota.status === 'closed' ? 'Tutup' : 'Penuh' %>
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex space-x-2">
                                <button type="button" class="btn-edit-kuota text-blue-600 hover:text-blue-800" data-kuota='<%= JSON.stringify(kuota).replace(/'/g, "&#39;") %>' title="Edit">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                </button>
                                <% if (kuota.status !== 'open') { %>
                                <form action="/admin/kuota/<%= kuota.id %>/toggle-status" method="POST">
                                    <button type="submit" class="text-green-600 hover:text-green-800" title="Buka Kuota">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"></path>
                                        </svg>
                                    </button>
                                </form>
                                <% } else { %>
                                <form action="/admin/kuota/<%= kuota.id %>/toggle-status" method="POST">
                                    <button type="submit" class="text-yellow-600 hover:text-yellow-800" title="Tutup Kuota">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                        </svg>
                                    </button>
                                </form>
                                <% } %>
                                <form action="/admin/kuota/<%= kuota.id %>/delete" method="POST" class="confirm-action" data-confirm="Yakin ingin menghapus kuota ini?">
                                    <button type="submit" class="text-red-600 hover:text-red-800" title="Hapus">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </form>                            </div>
                        </td>
                    </tr>
                    <% }); %>
                    <% } else { %>
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                            <svg class="w-12 h-12 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                            Belum ada data kuota
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add/Edit Modal -->
<div id="kuotaModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl max-w-md w-full mx-4">
        <div class="p-6 border-b border-gray-100">
            <h3 id="modalTitle" class="text-lg font-semibold text-gray-900">Tambah Kuota</h3>
        </div>
        <form id="kuotaForm" method="POST" class="p-6 space-y-4">
            <input type="hidden" id="kuotaId" name="id" value="">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Tahun Ajaran</label>
                <input type="text" id="kuotaTahunAjaran" name="tahun_ajaran" required 
                    placeholder="2024/2025"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Kuota Peserta</label>
                <input type="number" id="kuotaJumlah" name="max_peserta" required min="1" max="100" value="50"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            </div>

            <div class="flex justify-end space-x-3 pt-4">
                <button type="button" id="kuotaModalCancelBtn" class="px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">Batal</button>
                <button type="submit" class="px-4 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700">Simpan</button>
            </div>
        </form>
    </div>
</div>

<script>
function openAddModal() {
    document.getElementById('modalTitle').textContent = 'Tambah Kuota';
    document.getElementById('kuotaForm').action = '/admin/kuota/create';
    document.getElementById('kuotaTahunAjaran').value = '';
    document.getElementById('kuotaJumlah').value = '50';
    document.getElementById('kuotaId').value = '';
    // tanggal_mulai/tanggal_selesai fields are not used in current schema
    document.getElementById('kuotaModal').classList.remove('hidden');
    document.getElementById('kuotaModal').classList.add('flex');
}

document.addEventListener('DOMContentLoaded', function(){
  const addBtn = document.getElementById('addKuotaBtn');
  if (addBtn) addBtn.addEventListener('click', openAddModal);

  document.querySelectorAll('.btn-edit-kuota').forEach(function(btn){
    btn.addEventListener('click', function(){
      try { editKuota(JSON.parse(this.getAttribute('data-kuota'))); } catch(e){console.error(e);}    
    });
  });

  document.querySelectorAll('.confirm-action').forEach(function(form){
    form.addEventListener('submit', function(e){
      if (!confirm(form.dataset.confirm || 'Yakin?')) e.preventDefault();
    });
  });

  const cancel = document.getElementById('kuotaModalCancelBtn');
  if (cancel) cancel.addEventListener('click', function(){ document.getElementById('kuotaModal').classList.add('hidden'); document.getElementById('kuotaModal').classList.remove('flex'); });
});
function editKuota(kuota) {
    document.getElementById('modalTitle').textContent = 'Edit Kuota';
    document.getElementById('kuotaForm').action = '/admin/kuota/update';
    document.getElementById('kuotaTahunAjaran').value = kuota.tahun_ajaran;
    document.getElementById('kuotaJumlah').value = kuota.max_peserta;
    document.getElementById('kuotaId').value = kuota.id;
    // tanggal_mulai/tanggal_selesai not available in schema
    document.getElementById('kuotaModal').classList.remove('hidden');
    document.getElementById('kuotaModal').classList.add('flex');
}

document.getElementById('kuotaModal').addEventListener('click', function(e) {
    if (e.target === this) closeModal();
});
</script>