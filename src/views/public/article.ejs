<!-- Public Article Detail Page -->
<section class="py-8 md:py-12">
    <div class="max-w-4xl mx-auto px-4">
        <!-- Breadcrumb -->
        <nav class="text-sm mb-6">
            <a href="/" class="text-gray-500 hover:text-primary-600">Beranda</a>
            <span class="mx-2 text-gray-400">/</span>
            <span class="text-gray-700">Artikel</span>
        </nav>

        <article class="bg-white rounded-lg shadow overflow-hidden">
            <% if (article.image_url) { %>
            <img src="<%= article.image_url %>" alt="<%= article.title %>" class="w-full h-64 md:h-96 object-cover">
            <% } %>
            
            <div class="p-6 md:p-8">
                <!-- Article Meta -->
                <div class="flex flex-wrap items-center text-sm text-gray-500 mb-4 gap-4">
                    <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <%= new Date(article.created_at).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                    </span>
                    <% if (article.author_name) { %>
                    <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <%= article.author_name %>
                    </span>
                    <% } %>
                </div>

                <!-- Article Title -->
                <h1 class="text-2xl md:text-3xl font-heading font-bold text-gray-900 mb-6">
                    <%= article.title %>
                </h1>

                <!-- Article Content -->
                <div class="prose prose-lg max-w-none text-gray-700">
                    <%- article.content %>
                </div>
            </div>
        </article>

        <!-- Back Link -->
        <div class="mt-6 text-center">
            <a href="/" class="inline-flex items-center text-primary-600 hover:text-primary-800 font-medium">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Kembali ke Beranda
            </a>
        </div>
    </div>
</section>
