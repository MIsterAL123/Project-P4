<!-- Peserta Riwayat Pelatihan -->
<div class="p-4 md:p-6">
  <!-- Page Header -->
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Riwayat Pelatihan</h1>
    <p class="text-gray-600 mt-1">Daftar pelatihan yang pernah Anda ikuti</p>
  </div>

  <!-- Riwayat List -->
  <% if (riwayatList && riwayatList.length > 0) { %>
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pelatihan</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">Periode</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">Nomor Urut</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% riwayatList.forEach(function(riwayat) { %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <div class="text-sm font-medium text-gray-900"><%= riwayat.judul_pelatihan || 'Pelatihan ' + riwayat.tahun_ajaran %></div>
              <div class="text-sm text-gray-500 md:hidden">
                #<%= riwayat.nomor_urut %> - <%= new Date(riwayat.created_at).toLocaleDateString('id-ID') %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap hidden md:table-cell">
              <% if (riwayat.tanggal_mulai && riwayat.tanggal_selesai) { %>
              <div class="text-sm text-gray-600">
                <%= new Date(riwayat.tanggal_mulai).toLocaleDateString('id-ID') %> - <%= new Date(riwayat.tanggal_selesai).toLocaleDateString('id-ID') %>
              </div>
              <% } else { %>
              <div class="text-sm text-gray-600"><%= riwayat.tahun_ajaran %></div>
              <% } %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if (riwayat.status === 'completed') { %>
              <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                Selesai
              </span>
              <% } else if (riwayat.status === 'rejected') { %>
              <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                Ditolak
              </span>
              <% } else if (riwayat.status === 'cancelled') { %>
              <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                Dibatalkan
              </span>
              <% } %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap hidden md:table-cell">
              <div class="text-sm text-gray-500">#<%= riwayat.nomor_urut %></div>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
  <% } else { %>
  <div class="bg-white rounded-lg shadow p-8 text-center">
    <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <h3 class="text-lg font-medium text-gray-900 mb-2">Belum Ada Riwayat</h3>
    <p class="text-gray-500">Anda belum memiliki riwayat pelatihan.</p>
  </div>
  <% } %>
</div>
