<div class="space-y-6">
    <!-- Welcome Section -->
    <div class="bg-gradient-to-r from-blue-600 to-cyan-600 rounded-xl p-6 text-white">
        <h1 class="text-2xl font-bold mb-2">Selamat Datang, <%= currentUser.nama %>!</h1>
        <p class="opacity-90">Dashboard Peserta P4 Jakarta - Pantau status pendaftaran dan kursus Anda</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Status Pendaftaran -->
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 font-medium">Status Pendaftaran P4</p>
                    <% if (typeof pendaftaran !== 'undefined' && pendaftaran) { %>
                    <p class="text-lg font-semibold mt-1
                        <%= pendaftaran.status === 'approved' ? 'text-green-600' :
                           pendaftaran.status === 'pending' ? 'text-yellow-600' :
                           pendaftaran.status === 'rejected' ? 'text-red-600' : 'text-gray-600' %>">
                        <%= pendaftaran.status === 'approved' ? 'Diterima' :
                           pendaftaran.status === 'pending' ? 'Menunggu' :
                           pendaftaran.status === 'rejected' ? 'Ditolak' : '-' %>
                    </p>
                    <% } else { %>
                    <p class="text-lg font-semibold text-gray-400 mt-1">Belum Daftar</p>
                    <% } %>
                </div>
                <div class="w-12 h-12 <%= typeof pendaftaran !== 'undefined' && pendaftaran && pendaftaran.status === 'approved' ? 'bg-green-100' : 'bg-gray-100' %> rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 <%= typeof pendaftaran !== 'undefined' && pendaftaran && pendaftaran.status === 'approved' ? 'text-green-600' : 'text-gray-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Kuota Info -->
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 font-medium">Kuota P4 Tersedia</p>
                    <% if (typeof kuota !== 'undefined' && kuota) { %>
                    <p class="text-2xl font-bold text-gray-900 mt-1">
                        <%= kuota.max_peserta - kuota.peserta_terdaftar %>
                    </p>
                    <p class="text-xs text-gray-500">dari <%= kuota.max_peserta %> kuota</p>
                    <% } else { %>
                    <p class="text-lg font-semibold text-gray-400 mt-1">-</p>
                    <% } %>
                </div>
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- NIK Info -->
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 font-medium">NIK</p>
                    <p class="text-lg font-semibold text-gray-900 mt-1 truncate"><%= peserta ? peserta.nik : '-' %></p>
                    <p class="text-xs text-gray-500">Nomor Identitas</p>
                </div>
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"></path>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- CTA Card -->
        <% if (typeof pendaftaran === 'undefined' || !pendaftaran) { %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                </div>
                <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Daftar Program P4</h3>
                    <p class="text-gray-600 text-sm mb-4">
                        Anda belum mendaftar program P4. Daftarkan diri Anda sekarang untuk mengikuti pelatihan dan pengembangan pendidikan.
                    </p>
                    <a href="/peserta/daftar-p4" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Daftar Sekarang
                    </a>
                </div>
            </div>
        </div>
        <% } else if (pendaftaran.status === 'pending') { %>
        <div class="bg-yellow-50 rounded-xl border border-yellow-200 p-6">
            <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div class="flex-1">
                    <h3 class="text-lg font-semibold text-yellow-800 mb-2">Menunggu Verifikasi</h3>
                    <p class="text-yellow-700 text-sm mb-4">
                        Pendaftaran Anda sedang dalam proses verifikasi. Kami akan memberitahu Anda melalui email setelah pendaftaran diproses.
                    </p>
                    <a href="/peserta/status-pendaftaran" class="text-yellow-700 hover:text-yellow-900 text-sm font-medium">
                        Lihat Detail Status →
                    </a>
                </div>
            </div>
        </div>
        <% } else if (pendaftaran.status === 'approved') { %>
        <div class="bg-green-50 rounded-xl border border-green-200 p-6">
            <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div class="flex-1">
                    <h3 class="text-lg font-semibold text-green-800 mb-2">Pendaftaran Diterima!</h3>
                    <p class="text-green-700 text-sm mb-4">
                        Selamat! Pendaftaran P4 Anda telah diterima. Silakan akses materi pembelajaran yang tersedia.
                    </p>
                    <a href="/peserta/my-courses" class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
                        Akses Materi
                    </a>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Profile Summary -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Profil Saya</h3>
            <div class="flex items-center space-x-4 mb-4">
                <div class="w-14 h-14 bg-blue-100 rounded-full flex items-center justify-center">
                    <span class="text-blue-700 font-bold text-xl"><%= user.nama.charAt(0).toUpperCase() %></span>
                </div>
                <div>
                    <h4 class="font-semibold text-gray-900"><%= user.nama %></h4>
                    <p class="text-sm text-gray-500">NISN: <%= user.nisn %></p>
                </div>
            </div>
            <div class="space-y-2 text-sm">
                <div class="flex items-center text-gray-600">
                    <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    <%= user.email %>
                </div>
                <div class="flex items-center text-gray-600">
                    <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <%= user.no_hp %>
                </div>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-100">
                <a href="/peserta/profile" class="text-blue-600 hover:text-blue-800 text-sm font-medium">Edit Profil →</a>
            </div>
        </div>
    </div>
</div>