<!-- Peserta Status Pendaftaran -->
<div class="p-4 md:p-6">
    <!-- Page Header -->
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Status Pendaftaran</h1>
        <p class="text-gray-600 mt-1">Pantau status pendaftaran pelatihan Anda</p>
    </div>

    <!-- Alert Messages -->
    <% if (typeof success !== 'undefined' && success) { %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= success %></span>
    </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= error %></span>
    </div>
    <% } %>

    <% if (pendaftaranList && pendaftaranList.length > 0) { %>
    <!-- Active Registrations -->
    <div class="space-y-4">
        <% pendaftaranList.forEach(function(pendaftaran) { %>
        <div class="bg-white rounded-lg shadow p-4 md:p-6">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between">
                <div class="flex-1">
                    <div class="flex items-start">
                        <% if (pendaftaran.status === 'registered' || pendaftaran.status === 'approved') { %>
                        <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0 mr-4">
                            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <% } else if (pendaftaran.status === 'pending') { %>
                        <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center flex-shrink-0 mr-4">
                            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <% } %>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-800"><%= pendaftaran.judul_pelatihan || 'Pelatihan ' + pendaftaran.tahun_ajaran %></h3>
                            <p class="text-gray-600 text-sm mt-1">Tahun Ajaran: <%= pendaftaran.tahun_ajaran %></p>
                        </div>
                    </div>
                    
                    <div class="mt-4 grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
                        <div>
                            <span class="text-gray-500">Nomor Urut</span>
                            <p class="font-semibold text-gray-800">#<%= pendaftaran.nomor_urut %></p>
                        </div>
                        <div>
                            <span class="text-gray-500">Tanggal Daftar</span>
                            <p class="font-medium text-gray-800"><%= new Date(pendaftaran.tanggal_daftar).toLocaleDateString('id-ID', {day: 'numeric', month: 'short', year: 'numeric'}) %></p>
                        </div>
                        <div>
                            <span class="text-gray-500">Periode</span>
                            <p class="font-medium text-gray-800">
                                <% if (pendaftaran.tanggal_mulai && pendaftaran.tanggal_selesai) { %>
                                    <%= new Date(pendaftaran.tanggal_mulai).toLocaleDateString('id-ID', {day: 'numeric', month: 'short'}) %> - <%= new Date(pendaftaran.tanggal_selesai).toLocaleDateString('id-ID', {day: 'numeric', month: 'short', year: 'numeric'}) %>
                                <% } else { %>
                                    -
                                <% } %>
                            </p>
                        </div>
                        <div>
                            <span class="text-gray-500">Status</span>
                            <p>
                                <span class="px-2 py-1 text-xs font-medium rounded-full 
                                    <%= pendaftaran.status === 'registered' || pendaftaran.status === 'approved' ? 'bg-green-100 text-green-800' : 
                                       pendaftaran.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                                       'bg-gray-100 text-gray-800' %>">
                                    <%= pendaftaran.status === 'registered' ? 'Terdaftar' : 
                                       pendaftaran.status === 'approved' ? 'Disetujui' :
                                       pendaftaran.status === 'pending' ? 'Menunggu' : pendaftaran.status %>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
                
                <% if (pendaftaran.status === 'pending') { %>
                <div class="mt-4 md:mt-0 md:ml-4">
                    <form action="/peserta/pendaftaran/<%= pendaftaran.id %>/cancel" method="POST" class="confirm-action" data-confirm="Yakin ingin membatalkan pendaftaran ini?">
                        <button type="submit" class="w-full md:w-auto px-4 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors text-sm font-medium">
                            Batalkan
                        </button>
                    </form>
                </div>
                <% } %>
            </div>
        </div>
        <% }); %>
    </div>
    <% } else { %>
    <!-- No Active Registration -->
    <div class="bg-white rounded-lg shadow p-8 text-center">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-700">Belum Ada Pendaftaran Aktif</h3>
        <p class="text-gray-500 mt-2 mb-6">Anda belum mendaftar pelatihan untuk periode saat ini.</p>
        <a href="/peserta/pelatihan" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Daftar Pelatihan
        </a>
    </div>
    <% } %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.confirm-action').forEach(function(form) {
        form.addEventListener('submit', function(e) {
            if (!confirm(form.dataset.confirm || 'Yakin?')) {
                e.preventDefault();
            }
        });
    });
});
</script>
