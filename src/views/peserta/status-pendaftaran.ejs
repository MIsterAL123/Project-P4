<div class="space-y-6">
    <!-- Header -->
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Status Pendaftaran P4</h1>
        <p class="text-gray-600 mt-1">Pantau status pendaftaran program P4 Anda</p>
    </div>

    <% if (typeof currentPendaftaran === 'undefined' || !currentPendaftaran) { %>
    <!-- No Active Registration -->
    <div class="bg-gray-50 border border-gray-200 rounded-xl p-8 text-center">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-700">Belum Ada Pendaftaran Aktif</h3>
        <p class="text-gray-500 mt-2 mb-6">Anda belum mendaftar program P4 untuk periode saat ini. Daftar sekarang!</p>
        <a href="/peserta/daftar-p4" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Daftar Program P4
        </a>
    </div>
    <% } else { %>
    <!-- Active Registration Status -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Status Card -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-6">Status Pendaftaran</h3>
                
                <% if (currentPendaftaran.status === 'registered') { %>
                <!-- Registered Successfully -->
                <div class="bg-green-50 border border-green-200 rounded-lg p-6">
                    <div class="flex items-start space-x-4">
                        <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <div>
                            <h4 class="text-lg font-semibold text-green-800">Pendaftaran Berhasil!</h4>
                            <p class="text-green-700 mt-1">
                                Selamat! Anda telah terdaftar dalam program P4 untuk tahun ajaran <%= currentPendaftaran.tahun_ajaran %>.
                            </p>
                            <div class="mt-4 inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg">
                                <span class="font-semibold">Nomor Urut: #<%= currentPendaftaran.nomor_urut %></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cancel Option -->
                <div class="mt-6 p-4 bg-gray-50 border border-gray-200 rounded-lg">
                    <p class="text-sm text-gray-600 mb-3">
                        Jika Anda ingin membatalkan pendaftaran, klik tombol di bawah ini. 
                        Perhatian: Pembatalan bersifat permanen dan kuota akan dikembalikan.
                    </p>
                    <form action="/peserta/pendaftaran/<%= currentPendaftaran.id %>/cancel" method="POST" 
                          onsubmit="return confirm('Apakah Anda yakin ingin membatalkan pendaftaran?')">
                        <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm">
                            Batalkan Pendaftaran
                        </button>
                    </form>
                </div>
                <% } else if (currentPendaftaran.status === 'cancelled') { %>
                <!-- Cancelled -->
                <div class="bg-red-50 border border-red-200 rounded-lg p-6">
                    <div class="flex items-start space-x-4">
                        <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center flex-shrink-0">
                            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </div>
                        <div>
                            <h4 class="text-lg font-semibold text-red-800">Pendaftaran Dibatalkan</h4>
                            <p class="text-red-700 mt-1">
                                Pendaftaran Anda untuk tahun ajaran <%= currentPendaftaran.tahun_ajaran %> telah dibatalkan.
                            </p>
                            <a href="/peserta/daftar-p4" class="inline-flex items-center mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                                Daftar Ulang
                            </a>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>

        <!-- Info Card -->
        <div class="lg:col-span-1 space-y-6">
            <!-- Status Badge -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <h4 class="text-sm font-semibold text-gray-700 mb-4">Status</h4>
                <% if (currentPendaftaran.status === 'registered') { %>
                <span class="inline-flex items-center px-4 py-2 bg-green-100 text-green-800 rounded-full text-sm font-medium">
                    <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                    Terdaftar
                </span>
                <% } else { %>
                <span class="inline-flex items-center px-4 py-2 bg-red-100 text-red-800 rounded-full text-sm font-medium">
                    <span class="w-2 h-2 bg-red-500 rounded-full mr-2"></span>
                    Dibatalkan
                </span>
                <% } %>
            </div>

            <!-- Detail Info -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <h4 class="text-sm font-semibold text-gray-700 mb-4">Detail Pendaftaran</h4>
                <div class="space-y-3 text-sm">
                    <div>
                        <p class="text-gray-500">Nomor Urut</p>
                        <p class="text-gray-900 font-medium">#<%= currentPendaftaran.nomor_urut %></p>
                    </div>
                    <div>
                        <p class="text-gray-500">Tahun Ajaran</p>
                        <p class="text-gray-900"><%= currentPendaftaran.tahun_ajaran %></p>
                    </div>
                    <div>
                        <p class="text-gray-500">Tanggal Daftar</p>
                        <p class="text-gray-900"><%= new Date(currentPendaftaran.tanggal_daftar).toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <!-- History -->
    <% if (typeof pendaftaranList !== 'undefined' && pendaftaranList && pendaftaranList.length > 0) { %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-100">
        <div class="p-6 border-b border-gray-100">
            <h3 class="text-lg font-semibold text-gray-900">Riwayat Pendaftaran</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Tahun Ajaran</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Nomor Urut</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Tanggal Daftar</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    <% pendaftaranList.forEach(function(item) { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-gray-900"><%= item.tahun_ajaran %></td>
                        <td class="px-6 py-4 text-gray-900">#<%= item.nomor_urut %></td>
                        <td class="px-6 py-4 text-gray-600"><%= new Date(item.tanggal_daftar).toLocaleDateString('id-ID') %></td>
                        <td class="px-6 py-4">
                            <span class="px-3 py-1 text-xs font-medium rounded-full 
                                <%= item.status === 'registered' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                <%= item.status === 'registered' ? 'Terdaftar' : 'Dibatalkan' %>
                            </span>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <% } %>
</div>
