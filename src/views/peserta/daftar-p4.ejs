<div class="space-y-6">
    <!-- Header -->
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Daftar Program P4</h1>
        <p class="text-gray-600 mt-1">Pusat Pelatihan dan Pengembangan Pendidikan Jakarta</p>
    </div>

    <% if (typeof alreadyRegistered !== 'undefined' && alreadyRegistered) { %>
    <!-- Already Registered -->
    <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-6">
        <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-yellow-800">Anda Sudah Terdaftar</h3>
                <p class="text-yellow-700 mt-1">
                    Anda sudah mendaftar program P4. Silakan cek status pendaftaran Anda.
                </p>
                <a href="/peserta/status-pendaftaran" class="inline-flex items-center mt-4 px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 transition-colors">
                    Lihat Status Pendaftaran
                </a>
            </div>
        </div>
    </div>
    <% } else if (typeof kuota === 'undefined' || !kuota || kuota.status !== 'open') { %>
    <!-- Registration Closed -->
    <div class="bg-red-50 border border-red-200 rounded-xl p-6">
        <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-red-800">Pendaftaran Ditutup</h3>
                <p class="text-red-700 mt-1">
                    Maaf, pendaftaran program P4 sedang tidak dibuka saat ini. Silakan hubungi admin untuk informasi lebih lanjut.
                </p>
            </div>
        </div>
    </div>
    <% } else if (kuota.peserta_terdaftar >= kuota.max_peserta) { %>
    <!-- Quota Full -->
    <div class="bg-red-50 border border-red-200 rounded-xl p-6">
        <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-red-800">Kuota Penuh</h3>
                <p class="text-red-700 mt-1">
                    Maaf, kuota pendaftaran program P4 untuk tahun ajaran <%= kuota.tahun_ajaran %> sudah penuh (<%= kuota.max_peserta %> peserta).
                </p>
            </div>
        </div>
    </div>
    <% } else { %>
    <!-- Registration Form -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Info Card -->
        <div class="lg:col-span-1">
            <div class="bg-blue-50 border border-blue-200 rounded-xl p-6">
                <h3 class="text-lg font-semibold text-blue-800 mb-4">Informasi Pendaftaran</h3>
                <div class="space-y-4 text-sm">
                    <div>
                        <p class="text-blue-600 font-medium">Tahun Ajaran</p>
                        <p class="text-blue-900"><%= kuota.tahun_ajaran %></p>
                    </div>
                    <div>
                        <p class="text-blue-600 font-medium">Kuota Tersedia</p>
                        <p class="text-blue-900"><%= kuota.max_peserta - kuota.peserta_terdaftar %> dari <%= kuota.max_peserta %> peserta</p>
                        <div class="mt-2 w-full bg-blue-200 rounded-full h-2">
                            <div class="bg-blue-600 h-2 rounded-full" style="width: <%= (kuota.peserta_terdaftar / kuota.max_peserta) * 100 %>%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-sm border border-gray-100">
                <div class="p-6 border-b border-gray-100">
                    <h3 class="text-lg font-semibold text-gray-900">Formulir Pendaftaran</h3>
                </div>
                <form action="/peserta/daftar-p4" method="POST" class="p-6 space-y-6">
                    <input type="hidden" name="kuota_id" value="<%= kuota.id %>">

                    <div class="bg-gray-50 rounded-lg p-4">
                        <h4 class="text-sm font-semibold text-gray-700 mb-3">Data Peserta</h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                            <div>
                                <span class="text-gray-500">Nama:</span>
                                <span class="text-gray-900 ml-2"><%= currentUser.nama %></span>
                            </div>
                            <div>
                                <span class="text-gray-500">NIK:</span>
                                <span class="text-gray-900 ml-2"><%= peserta ? peserta.nik : '-' %></span>
                            </div>
                            <div>
                                <span class="text-gray-500">Email:</span>
                                <span class="text-gray-900 ml-2"><%= currentUser.email %></span>
                            </div>
                            <div>
                                <span class="text-gray-500">Link Dokumen:</span>
                                <% if (peserta && peserta.link_dokumen) { %>
                                <a href="<%= peserta.link_dokumen %>" target="_blank" class="text-blue-600 ml-2 hover:underline">Lihat Dokumen</a>
                                <% } else { %>
                                <span class="text-gray-900 ml-2">-</span>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Motivasi Mengikuti Program P4</label>
                        <textarea name="motivasi" rows="4" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                            placeholder="Ceritakan motivasi Anda mengikuti program P4..."></textarea>
                    </div>

                    <div>
                        <label class="flex items-start">
                            <input type="checkbox" name="agree" required class="w-4 h-4 mt-1 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                            <span class="ml-2 text-sm text-gray-600">
                                Saya menyatakan data yang saya isi adalah benar dan saya bersedia mengikuti seluruh rangkaian program P4 dengan sungguh-sungguh.
                            </span>
                        </label>
                    </div>

                    <div class="flex justify-end">
                        <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                            Daftar Sekarang
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% } %>
</div>