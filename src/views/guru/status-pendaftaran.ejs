<!-- Guru Status Pendaftaran -->
<div class="p-4 md:p-6">
  <!-- Page Header -->
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Status Pendaftaran</h1>
    <p class="text-gray-600 mt-1">Lihat status pendaftaran pelatihan Anda</p>
  </div>

  <!-- Alert Messages -->
  <% if (typeof success !== 'undefined' && success) { %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
    <span class="block sm:inline"><%= success %></span>
  </div>
  <% } %>
  
  <% if (typeof error !== 'undefined' && error) { %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
    <span class="block sm:inline"><%= error %></span>
  </div>
  <% } %>

  <!-- Pendaftaran List -->
  <% if (pendaftaranList && pendaftaranList.length > 0) { %>
  <div class="space-y-4">
    <% pendaftaranList.forEach(function(pendaftaran) { %>
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <div class="flex flex-col md:flex-row md:items-start md:justify-between">
        <div class="flex-1">
          <div class="flex items-start">
            <% if (pendaftaran.status === 'registered' || pendaftaran.status === 'approved') { %>
            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0 mr-4">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <% } else if (pendaftaran.status === 'pending') { %>
            <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center flex-shrink-0 mr-4">
              <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <% } else { %>
            <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center flex-shrink-0 mr-4">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2"></path>
              </svg>
            </div>
            <% } %>

            <div>
              <h3 class="text-lg font-semibold text-gray-800"><%= pendaftaran.judul_pelatihan || 'Pelatihan ' + pendaftaran.tahun_ajaran %></h3>
              <p class="text-gray-600 text-sm mt-1">Tahun Ajaran: <%= pendaftaran.tahun_ajaran %></p>
            </div>
          </div>

          <div class="mt-4 grid grid-cols-2 md:grid-cols-4 gap-4 text-sm text-gray-600">
            <div>
              <span class="text-gray-500">Nomor Urut</span>
              <p class="font-semibold text-gray-800">#<%= pendaftaran.nomor_urut %></p>
            </div>
            <div>
              <span class="text-gray-500">Tanggal Daftar</span>
              <p class="font-medium text-gray-800"><%= new Date(pendaftaran.tanggal_daftar || pendaftaran.created_at).toLocaleDateString('id-ID', {day: 'numeric', month: 'short', year: 'numeric'}) %></p>
            </div>
            <div>
              <span class="text-gray-500">Periode</span>
              <p class="font-medium text-gray-800"><% if (pendaftaran.tanggal_mulai) { %><%= new Date(pendaftaran.tanggal_mulai).toLocaleDateString('id-ID', {day: 'numeric', month: 'short'}) %> - <%= new Date(pendaftaran.tanggal_selesai).toLocaleDateString('id-ID', {day: 'numeric', month: 'short', year: 'numeric'}) %><% } else { %>-<% } %></p>
            </div>
            <div>
              <span class="text-gray-500">Status</span>
              <p>
                <span class="px-2 py-1 text-xs font-medium rounded-full 
                  <%= pendaftaran.status === 'registered' || pendaftaran.status === 'approved' ? 'bg-green-100 text-green-800' : 
                     pendaftaran.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                     pendaftaran.status === 'surat_terkirim' ? 'bg-blue-100 text-blue-800' : 
                     'bg-red-100 text-red-800' %>">
                  <%= pendaftaran.status === 'registered' ? 'Terdaftar' : 
                     pendaftaran.status === 'approved' ? 'Disetujui' : 
                     pendaftaran.status === 'pending' ? 'Menunggu' : 
                     pendaftaran.status === 'surat_terkirim' ? 'Surat Terkirim' : 'Ditolak' %>
                </span>
              </p>
            </div>
          </div>

          <% if (pendaftaran.surat_tugas) { %>
          <div class="mt-3">
            <a href="/uploads/surat_tugas/<%= pendaftaran.surat_tugas %>" target="_blank" class="inline-flex items-center text-sm text-blue-600 hover:text-blue-800">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              Lihat Surat Tugas
            </a>
          </div>
          <% } else if (pendaftaran.status === 'approved') { %>
          <div class="mt-3">
            <a href="/guru/upload-surat-tugas/<%= pendaftaran.id %>" class="inline-flex items-center px-3 py-1 bg-blue-600 text-white rounded-md text-sm hover:bg-blue-700">Unggah Surat Tugas</a>
          </div>
          <% } %>
        </div>

        <div class="mt-4 md:mt-0 md:ml-6">
          <% if (pendaftaran.status === 'pending') { %>
          <form action="/guru/pendaftaran/<%= pendaftaran.id %>/cancel" method="POST" onsubmit="return confirm('Yakin ingin membatalkan pendaftaran ini?')">
            <button type="submit" class="w-full md:w-auto px-4 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors text-sm font-medium">Batalkan</button>
          </form>
          <% } %>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <% } else { %>
  <div class="bg-white rounded-lg shadow p-8 text-center">
    <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
    </svg>
    <h3 class="text-lg font-medium text-gray-900 mb-2">Belum Ada Pendaftaran</h3>
    <p class="text-gray-500 mb-4">Anda belum mendaftar ke pelatihan manapun.</p>
    <a href="/guru/daftar-pelatihan" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
      Daftar Pelatihan
    </a>
  </div>
  <% } %>
</div>
